{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "execTime": "#A3BE8C",
    "git": "#6C6C6C",
    "linux": "#6192BF",
    "path": "#81A1C1",
    "shell": "#B48EAD",
    "superuser": "#DDBB00",
    "win": "#BF616A"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "{{ if .Root }}[Admin] {{ end }}",
          "foreground": "p:superuser",
          "type": "session"
        },
        {
          "style": "plain",
          "template": "{{ .UserName }}@{{ .HostName }} ",
          "type": "session",
          "foreground_templates": [
            "{{ if contains \"windows\" .OS }}p:win{{ end }}",
            "p:linux"
          ]
        },
        {
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "foreground": "p:path",
          "type": "path"
        },
        {
          "properties": {
            "branch_ahead_icon": "<#88C0D0>\u21e1 </>",
            "branch_behind_icon": "<#88C0D0>\u21e3 </>",
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true,
            "github_icon": ""
          },
          "style": "plain",
          "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#FFAFD7>*</>{{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "p:git",
          "type": "git"
        },
        {
          "properties": {
            "always_enabled": false,
            "style": "austin",
            "threshold": 250
          },
          "style": "plain",
          "template": " {{ .FormattedMs }} ",
          "foreground": "p:execTime",
          "type": "executiontime"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain",
          "template": "[{{ .CurrentDate | date .Format }}] ",
          "foreground": "p:shell",
          "type": "time"
        },
        {
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "{{ .Shell }} ‚ùØ ",
          "foreground": "p:shell",
          "type": "status"
        }
      ],
      "newline": true
    }
  ],
  "version": 3
}
