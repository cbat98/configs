{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "nix": "#AEF045",
    "brackets": "#ED6140",
    "user": "#FFBE28",
    "at": "#AEC045",
    "host": "#56b0f0",
    "prompt": "#ffffff"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
          {
          "type": "nix-shell",
          "style": "powerline",
          "foreground": "p:at",
          "template": "{{ if .Type }}[nix-shell]{{ end }}"
        },
        {
          "style": "plain",
          "template": "{{ if .Root }}[root]{{ end }}",
          "foreground": "p:brackets",
          "type": "session"
        },
        {
          "style": "plain",
          "template": "[<p:user>{{ .UserName }}</><p:at>@</><p:host>{{ .HostName }}</>]<p:prompt>$</> ",
          "foreground": "p:brackets",
          "type": "session"
        }
      ]
    }
  ],
  "version": 3
}
