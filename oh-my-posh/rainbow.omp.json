{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "nix": "#AEF045",
    "brackets": "#ED6140",
    "user": "#FFBE28",
    "at": "#6BC26C",
    "host": "#56b0f0",
    "directory": "#9D48B3",
    "prompt": "#ffffff"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "template": "{{ if .Root }}[root]{{ end }}",
          "foreground": "p:brackets"
        },
        {
          "type": "text",
          "style": "plain",
          "template": "[",
          "foreground": "p:brackets"
        },
        {
          "type": "session",
          "style": "plain",
          "template": "<p:user>{{ .UserName }}</><p:at>@</><p:host>{{ .HostName }}</>",
          "foreground": "p:brackets"
        },
        {
            "type": "path",
            "style": "plain",
            "template": " {{ .Path }}",
            "foreground": "p:directory",
            "properties": {
                "style": "folder"
            }
        },
        {
          "type": "text",
          "style": "plain",
          "template": "]<p:prompt>$</> ",
          "foreground": "p:brackets"
        }
      ]
    }
  ],
  "version": 3
}
