{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "brackets": "#ED6140",
    "user": "#FFBE28",
    "at": "#AEC045",
    "host": "#7AA9A0",
    "prompt": "#ffffff"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "template": "{{ if .Root }}[<p:user>root</>]{{ end }}",
          "foreground": "p:brackets",
          "type": "session"
        },
        {
          "style": "plain",
          "template": "[<p:user>{{ .UserName }}</><p:at>@</><p:host>{{ .HostName }}</>]<p:prompt>$</> ",
          "foreground": "p:brackets",
          "type": "session"
        }
      ]
    }
  ],
  "version": 3
}
